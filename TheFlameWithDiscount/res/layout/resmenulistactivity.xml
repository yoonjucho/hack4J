<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,RtlHardcoded" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/topbar_theflame"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_resmenulistactivity_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/img_resmenulistactivity_titlebar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/title_bar"
            android:contentDescription="@null" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_resmenulistactivity_cart"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:contentDescription="@null"
                android:src="@drawable/eat_order_cart" />

            <TextView
                android:id="@+id/txt_resmenulistactivity_cartCount"
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/textbadgestyle"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:text="@string/count"
                android:textColor="@android:color/black"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="45dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/frmLay_resmenulistactivity_salads"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
  				android:background="#87CEFA" >

                <TextView
                    android:id="@+id/textView_resmenulistactivity_salads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:text="@string/resmenulistactivity_salads"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_resmenulistactivity_saladsArrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@null"
                    android:src="@drawable/cancle"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frmLay_resmenulistactivity_Startes"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#87CEFA" >

                <TextView
                    android:id="@+id/textView_resmenulistactivity_Startes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:text="@string/resmenulistactivity_Startes"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_resmenulistactivity_StartesArrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@null"
                    android:src="@drawable/cancle"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frmLay_resmenulistactivity_Mains"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#87CEFA" >

                <TextView
                    android:id="@+id/textView_resmenulistactivity_Mains"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:text="@string/resmenulistactivity_Mains"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_resmenulistactivity_MainsArrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@null"
                    android:src="@drawable/cancle"
                    android:visibility="gone" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frmLay_resmenulistactivity_Desserts"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="#87CEFA" >

                <TextView
                    android:id="@+id/textView_resmenulistactivity_Desserts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingBottom="9dp"
                    android:text="@string/resmenulistactivity_Desserts"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_resmenulistactivity_DessertsArrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:contentDescription="@null"
                    android:src="@drawable/cancle"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <ListView
        android:id="@+id/listView_resmenulistactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theflame_bg"
        android:cacheColorHint="#00000000"
        android:descendantFocusability="blocksDescendants"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:scrollbars="none" >
    </ListView>

    <TextView
        android:id="@+id/textView_resmenulistactivity_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/emptylistView_string"
        android:textColor="@android:color/white" />

</LinearLayout>
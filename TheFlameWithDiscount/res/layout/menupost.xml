<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,RtlHardcoded" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/topbar_theflame"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_resmenulistactivity_back7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/img_resmenulistactivity_titlebar7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/title_bar"
            android:contentDescription="@null" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_resmenulistactivity_cart7"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:contentDescription="@null"
                android:src="@drawable/eat_order_cart" />

            <TextView
                android:id="@+id/txt_resmenulistactivity_cartCount7"
                android:layout_width="17dp"
                android:layout_height="19dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/textbadgestyle"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:text="@string/count"
                android:textColor="@android:color/black"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/theflame_bg"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/resname2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="7dp"
            android:text="양여사밥집"
            android:textColor="#4682B4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="126dp"
                android:layout_height="90dp"
                android:paddingTop="5dp"
                android:src="@drawable/chu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
           			android:textColor="#4682B4"
                    android:text="TextView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:paddingBottom="0dp"
                    android:paddingTop="2dp" >

                    <TextView
                        android:id="@+id/nowscore3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:text="현재"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/nowscore4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="5점!"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>

                <RatingBar
                    android:id="@+id/nowrating2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    style="?android:attr/ratingBarStyleSmall"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black" />

        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.00" />

        <TextView
            android:id="@+id/nameofmunu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="#4682B4"
            android:text="메뉴이름" />

        <EditText
            android:id="@+id/editText_nameofmunu"
            android:layout_width="319dp"
            android:layout_height="40dp"
            android:ems="10"
            android:hint="메뉴를 입력해 주세요."
            android:textColor="#DE3751"
            android:paddingTop="10dp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/priceofmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:textColor="#468EB4"
            android:text="가격" />

        <EditText
            android:id="@+id/EditText_priceofmenu"
            android:layout_width="314dp"
            android:layout_height="32dp"
            android:ems="10"
            android:hint="숫자만 입력해 주세요."
            android:paddingTop="5dp" />
        
        <Button
            android:id="@+id/postmenu_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="등록" />

        <Button
            android:id="@+id/imageupload"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지업로드" />

        <ImageView
            android:id="@+id/image_sample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resimagetwo" />

    </LinearLayout>

</LinearLayout>
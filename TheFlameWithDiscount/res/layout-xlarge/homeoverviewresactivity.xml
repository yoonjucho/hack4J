<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,RtlSymmetry" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@drawable/topbar_theflame"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_homeresactivity_back"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/img_homeresactivity_titlebar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/title_bar"
            android:contentDescription="@null" />

        <View
            android:layout_width="154dp"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img_homeresactivity_cart"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="3dp"
                android:contentDescription="@null"
                android:src="@drawable/eat_order_cart" />

            <TextView
                android:id="@+id/txt_homeresactivity_cartCount"
                android:layout_width="22dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/textbadgestyle"
                android:gravity="center"
                android:paddingLeft="1dp"
                android:text="@string/count"
                android:textColor="@android:color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:baselineAligned="false" >

        <FrameLayout
            android:id="@+id/frmLay_homeactivity_overview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black" >

            <TextView
                android:id="@+id/textView_homeresactivity_overviewName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:text="@string/ovweviewfragment_overView"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_homeresactivity_overviewArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/cancle"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frmLay_homeactivity_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black" >

            <TextView
                android:id="@+id/textView_homeresactivity_overviewMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:text="@string/ovweviewfragment_menu"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_homeresactivity_menuArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/cancle"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frmLay_homeactivity_menuDiscount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/black" >

            <TextView
                android:id="@+id/textView_homeresactivity_overviewDiscountMenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingBottom="9dp"
                android:text="@string/ovweviewfragment_menuDiscount"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_homeresactivity_menuDiscountArrow"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|center_horizontal"
                android:contentDescription="@null"
                android:src="@drawable/cancle"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView_homeresactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_homeresactivity_resimagee"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/resimagetwo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/gragident_bar"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageView_homeresactivity_resName"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"
                        android:src="@android:drawable/ic_dialog_map" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_distance"
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="left|center_vertical"
                        android:padding="3dp"
                        android:text="@null"
                        android:textSize="24sp"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/imageView_homeresactivity_resTag"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@null"
                        android:src="@android:drawable/ic_dialog_map" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_resTag"
                        android:layout_width="33dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.23"
                        android:gravity="left|center_vertical"
                        android:padding="3dp"
                        android:text="@null"
                        android:textSize="24sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>
                <!-- </LinearLayout> -->
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView_homeresactivity_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/ovweviewfragment_nameOftheRes"
                    android:textColor="@color/col_flame_light_Red"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_homeresactivity_overview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/ovweviewfragment_description"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/img_homeresactivity_mapImage"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@android:drawable/dark_header"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/location_map" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView_homeresactivity_dining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_diningStyle"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_dynStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_casual"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView_homeresactivity_dress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_dressCode"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_dressCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_casual"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView_homeresactivity_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_priceRange"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_pricerange"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_price"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/col_flame_light_gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView_homeresactivity_operating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_operatingHours"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_timining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_operatingTime"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView_homeresactivity_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_phone"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_phnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_phoneNumber"
                        android:textColor="@android:color/black"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView_homeresactivity_fratures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_fratures"
                        android:textColor="@color/col_flame_light_gray"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_homeresactivity_feture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/ovweviewfragment_laidbackAtmosphere"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
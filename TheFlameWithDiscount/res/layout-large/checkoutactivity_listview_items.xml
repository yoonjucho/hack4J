<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical"
    tools:ignore="RtlSymmetry,RtlHardcoded" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center_vertical"
        android:baselineAligned="false" >

        <LinearLayout
            android:id="@+id/linlay_checkoutactivity_listview_items"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/textView_checkoutactivity_listview_items_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:paddingLeft="5dp"
                android:text="@string/checkoutactivity_item"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView_checkoutactivity_listview_items_price"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                 android:textSize="18sp"
                android:text="@string/resmenulistactivity_listview_items_price"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_checkoutactivity_listview_items_qty"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/col_dark_Yellow"
                android:focusable="true"
                android:gravity="center"
                 android:textSize="18sp"
                android:text="@string/checkoutactivity_qty"
                android:textColor="@color/col_flame_drak_yellow"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_checkoutactivity_listview_items_deleteCart"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@color/col_light_Yellow"
                android:gravity="center"
                android:padding="1dp"
                android:textSize="18sp"
                android:text="@string/checkoutactivity_delete"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:baselineAligned="false" >
    </LinearLayout>

</LinearLayout>